= form_with(model: instance) do |form|
  - if instance.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(instance.errors.count, "error")
        prohibited this instance from being saved:
      %ul
        - instance.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.submit
